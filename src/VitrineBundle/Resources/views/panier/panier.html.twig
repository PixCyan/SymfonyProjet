{% extends "VitrineBundle::layout.html.twig" %}

{% block content %}
    <h1> Panier </h1>
    {% if produits is defined and produits is not empty %}
        <table>
        {% for key, produit in produits %}
            <tr><td>{{ produit.article.libelle }} quantit√© : {{ produit.quantite }} </td><td><a href="{{ path('ajouterPanier', {'id': produit.quantite }) }} "> Ajouter au panier</a></td></tr>
        {% endfor %}
        </table>
    {% else %}
        <p> Aucun produit disponible dans votre panier.</p>
    {% endif %}

{% endblock %}

