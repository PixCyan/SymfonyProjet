{% extends "VitrineBundle::layout.html.twig" %}

{% block content %}
    <h1> Categorie : {{ categorie.libelle }}</h1>
    {% if produits is defined %}
        <div class="row">
        {% for p in produits %}
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img class="imgShop" src="{{ asset('bundles/vitrine/images/' ~ firstImage(p).url) }}" alt="">
                    <div class="caption">
                        <h4 class="pull-right">{{ p.prix }}â‚¬</h4>
                        <h4><a href="{{ path('article_show', {'id': p.id }) }}">{{ p.libelle }} </a>
                        </h4>
                        <p>{{ p.description }}</p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right"><a href="{{ path('ajouterPanier', {'id': p.id}) }} "> Ajouter au panier</a></p>
                        <p>Stock : {{ p.stock }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    {% else %}
        <article>
            <p> Aucun article disponible.</p>
        </article>

    {% endif %}





{% endblock %}